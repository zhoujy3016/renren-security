<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.sys.dao.BteLessonTypeDao">
	<!-- 开启二级缓存 -->
  	<cache eviction="FIFO" flushInterval="60000" size="512" readOnly="true"/>

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.sys.entity.BteLessonTypeEntity" id="bteLessonTypeMap">
        <result property="code" column="data_no"/>
        <result property="categoryId" column="category_id"/>
        <result property="value" column="type_name"/>
    </resultMap>

	<select id="queryLessonTypeByCategory" resultMap="bteLessonTypeMap">
		select data_no,
				category_id,
				type_name
		from bte_lesson_type
		where category_id = #{categoryId}
	</select>
</mapper>